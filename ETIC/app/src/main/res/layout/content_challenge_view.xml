        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/challenge_view_description"
        android:layout_weight="0.99" />

    <Button
        android:id="@+id/challenge_view_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACCEPT CHALLENGE" />

</LinearLayout>
