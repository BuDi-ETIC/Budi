<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jack.budi.ChallengeViewActivity"
    tools:showIn="@layout/activity_challenge_view"
    android:weightSum="1">

    <ImageView
        android:id="@+id/background_challenge_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/edinburgh_placeholder"
        android:scaleType="centerCrop"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/points_img"
        android:src="@drawable/ic_menu_camera"/>

        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edinburgh"
            android:id="@+id/challenge_view_title"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"/>

    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:padding="20sp"
        android:text="Blah Blah Blah BlahBlah Blah Blah Blah Blah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah BlahBlah Blah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/challenge_view_description"
        android:layout_weight="0.99" />

    <Button
        android:id="@+id/challenge_view_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACCEPT CHALLENGE" />
</LinearLayout>

</RelativeLayout>
