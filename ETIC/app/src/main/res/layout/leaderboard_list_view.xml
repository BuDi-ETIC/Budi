<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="16dp"
    android:id="@+id/leaderboard_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/leaderboard_rank"
        android:textSize="40sp"/>

    <LinearLayout
        android:paddingLeft="16dp"
        android:layout_toRightOf="@+id/leaderboard_rank"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:id="@+id/leaderboard_username"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/leaderboard_lvl_name"
            android:text="Player lvl name"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/leaderboard_points"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:text="10,000"/>


</RelativeLayout>